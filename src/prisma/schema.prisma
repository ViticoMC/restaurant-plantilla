generator client {
  provider = "prisma-client-js"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Admin {
  id          String      @id @default(uuid())
  admin       String      @unique
  password    String

}

model Plato {
  id           String   @id @default(uuid())
  nombre       String
  precio       Float
  descripcion  String
  ingredientes String[]
  foto         String
  disponible   Boolean  @default(true)
  key_word     String

  categoriaIds String[] // Array de IDs de categor√≠as
}

model Categoria {
  id     String @id @default(uuid())
  nombre String @unique
  icon   String
}
